<resources>
    <style name="TableEdge">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@color/TableEdge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="TableLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/TableLinearLayoutColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:outlineProvider">bounds</item>
    </style>
</resources>
