<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TextViewNames">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">11dp</item>
     <!--   <item name="android:background">@color/TextViewNames</item> -->
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TableEdge">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/table_edge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:background">@drawable/linear_layout_border</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:outlineProvider">bounds</item>
    </style>

    <style name="TableEditText">
        <item name="android:background">@color/PrimaryLightGrey</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:outlineProvider">bounds</item>
    </style>

    <style name="TableButton">
        <item name="android:background">@color/PrimaryLightGrey</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:outlineProvider">bounds</item>
    </style>

    <style name="TableTextView">
        <item name="android:background">@color/TableLinearLayoutColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:outlineProvider">bounds</item>
    </style>


    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">8</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:stretchColumns">0,1,2,3,4,5,6,7</item>
    </style>







    <style name="TableLinearLayoutColor" parent="TextAppearance.AppCompat">
        <item name="colorPrimary">@color/PrimaryLightGrey</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
    <style name="TitleText" parent="TextAppearance.AppCompat"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>